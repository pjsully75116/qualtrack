<Window x:Class="QualTrack.UI.QualificationPreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Qualification Status Preview" Height="500" Width="600"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Qualification Status Preview" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBlock x:Name="SailorInfoText" FontSize="14" FontWeight="SemiBold"/>
            <TextBlock Text="Review the qualification status that will be saved to the training jacket:" Margin="0,10,0,0"/>
        </StackPanel>

        <!-- Qualification Details -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="QualificationDetailsPanel">
                <!-- Content will be populated dynamically -->
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="EditButton" Content="Edit" Width="80" Height="30" Margin="0,0,10,0" Click="EditButton_Click"/>
            <Button x:Name="ApproveButton" Content="Approve" Width="100" Height="30" Click="ApproveButton_Click"/>
        </StackPanel>
    </Grid>
</Window> 