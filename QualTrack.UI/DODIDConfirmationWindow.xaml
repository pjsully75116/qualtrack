<Window x:Class="QualTrack.UI.DODIDConfirmationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DODID Match Found" Height="600" Width="800" 
        WindowStartupLocation="CenterOwner" ResizeMode="CanResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" Text="DODID Match Found" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>
        
        <!-- Warning Message -->
        <Border Grid.Row="1" Background="#FFF3CD" BorderBrush="#FFEAA7" BorderThickness="1" CornerRadius="5" Padding="15" Margin="0,0,0,20">
            <TextBlock Text="A sailor with this DODID already exists in the database. Please confirm this is the same person before proceeding." 
                       TextWrapping="Wrap" Foreground="#856404"/>
        </Border>
        
        <!-- Comparison Grid -->
        <Grid Grid.Row="2" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Existing Sailor Info -->
            <GroupBox Grid.Column="0" Header="Existing Sailor in Database" Margin="0,0,10,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="250">
                    <StackPanel Margin="10">
                        <TextBlock Text="Name:" FontWeight="Bold"/>
                        <TextBlock x:Name="ExistingNameText" Text="Loading..." Margin="0,0,0,10"/>
                        
                        <TextBlock Text="DODID:" FontWeight="Bold"/>
                        <TextBlock x:Name="ExistingDODIDText" Text="Loading..." Margin="0,0,0,10"/>
                        
                        <TextBlock Text="Rate/Rank:" FontWeight="Bold"/>
                        <TextBlock x:Name="ExistingRateRankText" Text="Loading..." Margin="0,0,0,10"/>
                        
                        <TextBlock Text="Duty Sections:" FontWeight="Bold"/>
                        <TextBlock x:Name="ExistingDutySectionsText" Text="Loading..." Margin="0,0,0,10"/>
                        
                        <TextBlock Text="Current Qualifications:" FontWeight="Bold" Margin="0,10,0,5"/>
                        <ScrollViewer MaxHeight="150" VerticalScrollBarVisibility="Auto">
                            <TextBlock x:Name="ExistingQualificationsText" Text="Loading..." TextWrapping="Wrap"/>
                        </ScrollViewer>
                    </StackPanel>
                </ScrollViewer>
            </GroupBox>
            
            <!-- Arrow -->
            <TextBlock Grid.Column="1" Text="â†’" FontSize="24" FontWeight="Bold" VerticalAlignment="Center" Margin="10,0"/>
            
            <!-- New Data -->
            <GroupBox Grid.Column="2" Header="New 3591/1 Data" Margin="10,0,0,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="250">
                    <StackPanel Margin="10">
                        <TextBlock Text="Name:" FontWeight="Bold"/>
                        <TextBlock x:Name="NewNameText" Text="Loading..." Margin="0,0,0,10"/>
                        
                        <TextBlock Text="DODID:" FontWeight="Bold"/>
                        <TextBlock x:Name="NewDODIDText" Text="Loading..." Margin="0,0,0,10"/>
                        
                        <TextBlock Text="Rate/Rank:" FontWeight="Bold"/>
                        <TextBlock x:Name="NewRateRankText" Text="Loading..." Margin="0,0,0,10"/>
                        
                        <TextBlock Text="Weapon:" FontWeight="Bold"/>
                        <TextBlock x:Name="NewWeaponText" Text="Loading..." Margin="0,0,0,10"/>
                        
                        <TextBlock Text="Qualification Date:" FontWeight="Bold"/>
                        <TextBlock x:Name="NewQualDateText" Text="Loading..." Margin="0,0,0,10"/>
                        
                        <TextBlock Text="Scores:" FontWeight="Bold" Margin="0,10,0,5"/>
                        <ScrollViewer MaxHeight="150" VerticalScrollBarVisibility="Auto">
                            <TextBlock x:Name="NewScoresText" Text="Loading..." TextWrapping="Wrap"/>
                        </ScrollViewer>
                    </StackPanel>
                </ScrollViewer>
            </GroupBox>
        </Grid>
        
        <!-- Action Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
            <Button x:Name="ConfirmButton" Content="Confirm Match &amp; Update" Width="200" Height="35" 
                    Background="#28A745" Foreground="White" FontWeight="Bold" Margin="0,0,10,0" Click="ConfirmButton_Click"/>
            <Button x:Name="SkipButton" Content="Skip This Sailor" Width="150" Height="35" 
                    Background="#6C757D" Foreground="White" Margin="0,0,10,0" Click="SkipButton_Click"/>
            <Button x:Name="CancelButton" Content="Cancel All" Width="100" Height="35" 
                    Background="#DC3545" Foreground="White" Click="CancelButton_Click"/>
        </StackPanel>
        
        <!-- Status -->
        <TextBlock Grid.Row="4" x:Name="StatusText" Text="" Foreground="Blue" HorizontalAlignment="Center"/>
    </Grid>
</Window> 